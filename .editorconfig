root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{adoc,md}]
max_line_length = off
trim_trailing_whitespace = false

[*.{cson,py}]
indent_size = 4

[{M,m}akefile]
indent_size = 4
indent_style = tab

[.cat*]
indent_size = 4
